{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build (debug)",
			"type": "shell",
			"command": "shards",
			"args": ["build"],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Run (debug)",
			"type": "shell",
			"command": "crystal",
			"args": [
				"run",
				"src/main.cr",
				"--",
				"examples/1.lox"
			]
		},
		{
			"label": "Test",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"type": "shell",
			"command": "dart",
			"options": {
				"cwd": "../craftinginterpreters"
			},
			"args": [
				"tool/bin/test.dart",
				"chap06_parsing",
				"--interpreter",
				"../crystal-lox/bin/crystal-lox"
			]
		}
	]
}
